<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#EBEBE0"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp" >

        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ub" />

        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="Usain Bolt"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#009900"
            android:textSize="27sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:id="@+id/textTituloDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imageLogo"
            android:layout_marginTop="20dp"
            android:text="DescripciÃ³n"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textDescripcion"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textTituloDescripcion"
            android:layout_marginTop="20dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textDescripcion"
            android:layout_marginTop="20dp"
            android:text="Start Time:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textStartTime"
            android:layout_marginTop="5dp"
            android:text="Duration:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textToBeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textDuration"
            android:layout_marginTop="5dp"
            android:text="To Beat:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:id="@+id/linearEspacio1"
            android:layout_width="30dp"
            android:layout_height="5dp"
            android:layout_alignBottom="@+id/textStartTime"
            android:layout_toRightOf="@+id/textStartTime"
            android:clickable="false"
            android:orientation="vertical" >
        </LinearLayout>

        <TextView
            android:id="@+id/textSTDato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textStartTime"
            android:layout_alignBottom="@+id/textStartTime"
            android:layout_toRightOf="@+id/linearEspacio1"
            android:text="(10:20:40)"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textDurationDato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textDuration"
            android:layout_alignBottom="@+id/textDuration"
            android:layout_alignLeft="@+id/textSTDato"
            android:text="(20 seg)"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textToBeatDato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textToBeat"
            android:layout_alignBottom="@+id/textToBeat"
            android:layout_alignLeft="@+id/textDurationDato"
            android:text="(1280 points)"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textSpeed"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="#E60000"
            android:clickable="false"
            android:gravity="center"
            android:text="Speed: 42.1 km/h"
            android:textColor="#ffffff" >

        </TextView>

        <TextView
            android:id="@+id/textTimeLeft"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:layout_above="@+id/textSpeed"
            android:layout_alignLeft="@+id/textSpeed"
            android:layout_marginBottom="20dp"
            android:background="#009900"
            android:clickable="false"
            android:gravity="center"
            android:text="Time Left: 00:35"
            android:textColor="#ffffff" />

</RelativeLayout>

</LinearLayout>